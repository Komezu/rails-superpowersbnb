<div class="container">
  <div class="form-container">
    <h2>Book <em><%= @superpower.name %></em></h2>
    <%= simple_form_for [@superpower, @booking] do |f| %>
      <%= f.input :start_date, start_year: Date.today.year %>
      <%= f.input :end_date, start_year: Date.today.year %>
      <%= f.submit class: "btn btn-outline-warning" %>
    <% end %>
  </div>

  <%= link_to "Back", superpower_path(@superpower), class: "btn btn-outline-warning" %>
</div>

